# Google reCAPTCHA v3 Configuration
# Get your keys from: https://www.google.com/recaptcha/admin/create

# Enable/disable reCAPTCHA
RECAPTCHA_ENABLED=true

# reCAPTCHA Keys (replace with your actual keys)
RECAPTCHA_SITE_KEY=your_site_key_here
RECAPTCHA_SECRET_KEY=your_secret_key_here

# Global minimum score threshold (0.0 to 1.0)
RECAPTCHA_MINIMUM_SCORE=0.5

# Action-specific score thresholds
RECAPTCHA_LOGIN_THRESHOLD=0.5
RECAPTCHA_REGISTER_THRESHOLD=0.3
RECAPTCHA_OTP_REQUEST_THRESHOLD=0.4
RECAPTCHA_OTP_VERIFY_THRESHOLD=0.6
RECAPTCHA_WALLET_THRESHOLD=0.7
RECAPTCHA_BOOKING_THRESHOLD=0.5

# reCAPTCHA API timeout (seconds)
RECAPTCHA_TIMEOUT=5

# Whether to bypass reCAPTCHA verification on API failures
RECAPTCHA_BYPASS_ON_FAILURE=false

# Triggers for reCAPTCHA requirement
RECAPTCHA_FAILED_ATTEMPTS=3
RECAPTCHA_SUSPICIOUS_BEHAVIOR=true
RECAPTCHA_NEW_IP=false
RECAPTCHA_BOT_DETECTED=true